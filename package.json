{
	"name": "skirell-panel-configurator",
	"version": "1.0.0",
	"main": "out/core/main.js",
	"scripts": {
		"convert:ts": "tsc",
		"convert:assets": "npm run copy-assets",
		"convert": "npm run convert:ts && npm run convert:assets",
		"copy-assets": "cpx \"src/assets/**/*\" out/assets/ && cpx \"src/core/html/**/*\" out/core/html/ && cpx \"src/core/css/**/*\" out/core/css/ && cpx \"icons/**/*\" out/icons",
		"start": "electron .",
		"build": "electron-builder"
	},
	"build": {
		"appId": "com.smarthouse.configurator",
		"asar": true,
        "files": [
            "out/**/*",
            "package.json",
            "!**/*.ts",
            "!src/**/*",
            "!icons/**/*",
            "!node_modules/**/*.test.*",
            "!node_modules/**/*.d.ts",
            "!node_modules/.bin",
            "!__tests__"
        ],
		"directories": {
			"output": "dist"
		},
		"win": {
            "target": "nsis",
            "icon": "icons/win/icon.ico",
            "legalTrademarks": "Â© 2025 Skirell"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "target": "dmg",
            "icon": "icons/mac/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "icons/linux/icon.png"
        }
	},
	"dependencies": {},
	"devDependencies": {
		"electron": "^36.4.0",
		"electron-builder": "^26.0.12",
		"@types/node": "^22.15.27",
		"@typescript-eslint/eslint-plugin": "^8.34.0",
		"@typescript-eslint/parser": "^8.34.0",
		"cpx": "^1.5.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.1"
	}
}
